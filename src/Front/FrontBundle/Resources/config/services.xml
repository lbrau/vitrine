<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="upload_path">uploads/contact/</parameter>
    </parameters>

    <services>
        <service id="front.upload_manager" class="Front\FrontBundle\Service\UploadManager">
            <!--<argument type="service" id="service_id" />-->
            <!--<argument>plain_value</argument>-->
            <argument>%kernel.root_dir%</argument>
        </service>
        <service id="front.email_manager" class="Front\FrontBundle\Service\MailerManager">
            <argument type="service" id="mailer" />
            <argument>%kernel.root_dir%</argument>
        </service>
    </services>
</container>
