{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Commentary</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Commentarytitle</th>
                <td>{{ entity.commentaryTitle }}</td>
            </tr>
            <tr>
                <th>Commentarycontent</th>
                <td>{{ entity.commentaryContent }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ entity.enabled }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('commentary') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('commentary_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
