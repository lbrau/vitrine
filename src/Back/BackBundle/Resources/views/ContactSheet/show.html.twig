{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ContactSheet</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Contacttype</th>
                <td>{{ entity.contactType }}</td>
            </tr>
            <tr>
                <th>Usualname</th>
                <td>{{ entity.usualName }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ entity.phone }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ entity.mail }}</td>
            </tr>
            <tr>
                <th>Messagecontent</th>
                <td>{{ entity.messageContent }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ entity.enabled }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('contactsheet') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('contactsheet_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
