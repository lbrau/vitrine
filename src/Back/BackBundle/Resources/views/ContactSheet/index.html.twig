{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ContactSheet list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contacttype</th>
                <th>Usualname</th>
                <th>Phone</th>
                <th>Mail</th>
                <th>Messagecontent</th>
                <th>Enabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('contactsheet_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.contactType }}</td>
                <td>{{ entity.usualName }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.mail }}</td>
                <td>{{ entity.messageContent }}</td>
                <td>{{ entity.enabled }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('contactsheet_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('contactsheet_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('contactsheet_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
